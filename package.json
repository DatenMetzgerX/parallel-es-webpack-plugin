{
  "name": "parallel-es-webpack-plugin",
  "version": "0.0.1",
  "description": "Webpack Plugin for Parallel.ES",
  "main": "./dist/parallel-es-webpack-plugin/index.js",
  "repository": "https://github.com/DatenMetzgerX/parallel-es-webpack-plugin",
  "scripts": {
    "build": "tslint index.ts './src/**/*.ts' './test/**/*.ts' && tsc",
    "start": "tsc --watch",
    "test": "nyc mocha --inline-diffs './test/**/*.specs.ts'",
    "test:watch": "mocha --compilers ts:ts-node/register -w --inline-diffs './test/**/*.specs.ts' -w",
    "coveralljs": "cat ./coverage/lcov.info | node_modules/coveralls/bin/coveralls.js"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "report-dir": "./coverage",
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "author": "Micha Reiser <micha@famreiser.ch>",
  "license": "MIT",
  "devDependencies": {
    "@types/babel-core": "^6.7.14",
    "@types/babel-generator": "^6.7.14",
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.41",
    "@types/sinon": "^1.16.31",
    "@types/sinon-chai": "^2.7.27",
    "@types/source-map": "^0.1.27",
    "chai": "^3.5.0",
    "coveralls": "^2.11.14",
    "mocha": "^3.1.0",
    "nyc": "^8.3.0",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "ts-node": "^1.3.0",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3",
    "webpack": "^2.1.0-beta.25"
  },
  "peerDependencies": {
    "babel-plugin-parallel-es": "0.0.2",
    "parallel-es": "0.0.2",
    "webpack": "^2.1.0-beta.25"
  },
  "dependencies": {
    "babel-core": "^6.16.0",
    "babel-loader": "^6.2.5",
    "source-map": "^0.5.6"
  }
}
