{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "pretty": true,
    "outDir": "dist",
    "target": "es5",
    "sourceMap": true,
    "lib": ["es6"]
  },
  "files": [
    "index.ts",
    "typings/index.d.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**/@types"
  ]
}